<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LeadersActivity">

    <!-- Tab Layout -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayoutLeaders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#7C4DFF"
        app:tabTextColor="#E0E0E0"
        app:tabSelectedTextColor="@android:color/white"
        app:tabIndicatorColor="@android:color/white"
        app:tabIndicatorHeight="3dp"
        app:tabMode="fixed"
        app:tabGravity="fill">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Leader 1" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Leader 2" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Leader 3" />

    </com.google.android.material.tabs.TabLayout>

    <!-- ViewPager for Fragments -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPagerLeaders"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F3E5F5" />

</LinearLayout>