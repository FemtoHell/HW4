<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".WondersActivity">

    <!-- Tab Layout - Đảm bảo hiển thị đầy đủ -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayoutWonders"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="8dp"
        android:background="#7C4DFF"
        android:contentDescription="Seven wonders navigation tabs"
        app:tabTextColor="#E0E0E0"
        app:tabSelectedTextColor="@android:color/white"
        app:tabIndicatorColor="@android:color/white"
        app:tabIndicatorHeight="3dp"
        app:tabMode="scrollable"
        app:tabGravity="fill"
        app:tabMaxWidth="0dp"
        app:tabTextAppearance="@android:style/TextAppearance.Medium" />

    <!-- ViewPager for Fragments -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPagerWonders"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFF3E0" />

</LinearLayout>